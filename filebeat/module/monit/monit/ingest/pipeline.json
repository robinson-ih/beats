{
  "description": "Pipeline for parsing monit monit logs",
  "processors": [
  	{
    "grok": {
      "field": "message",
      "patterns":[
        "%{MONIT_TIMESTAMP:monit.timestamp}]\s{LOGLEVEL:log}.*'delayed_job.%{INT:delayed_job}'.*pid.*%{NUMBER:pid}",
        "%{MONIT_TIMESTAMP:monit.timestamp}]\s%{LOGLEVEL:log}.*'delayed_job.%{INT:delayed_job}'%{GREEDYDATA}",
        "%{MONIT_TIMESTAMP:monit.timestamp}]\s%{LOGLEVEL:log}%{GREEDYDATA}"
        ],
       "pattern_definitions": {
          "MONIT_TIMESTAMP": "%{TZ} %{MONTH} %{MONTHDAY} %{TIME}"
        },
      "ignore_missing": true
    }
   },
    {
      "date": {
        "field": "monit.timestamp",
        "target_field": "@timestamp",
       "formats": [
	  "MMM  d HH:mm:ss",
	  "MMM dd HH:mm:ss"
        ],
       "ignore_failure": true
       }
    }
  ],
  "on_failure" : [{
    "set" : {
      "field" : "error.message",
      "value" : "{{ _ingest.on_failure_message }}"
    }
  }]
}